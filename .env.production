# ========================================
# EduPath Platform - Production Environment Template
# ========================================
NODE_ENV=production

# ========================================
# Security Secrets (SET VIA HOSTING ENVIRONMENT)
# ========================================
# DO NOT put real secrets here - set these via your hosting provider's
# environment variable configuration (Replit Secrets, Heroku Config Vars, etc.)
#
# JWT_SECRET=<set-via-hosting-environment-min-64-chars>
# CSRF_SECRET=<set-via-hosting-environment-min-32-chars>
# DATABASE_URL=<set-via-hosting-environment>

TRUST_PROXY=1

# ========================================
# Feature Flags - Production
# ========================================
SEO_META_ENABLED=true
FORCE_HTTPS_REDIRECT=true
CANONICAL_URL_ENFORCEMENT=true
MONITORING_ENABLED=true
COMPLIANCE_REPORT_ENABLED=true
ERROR_DETAILS_ENABLED=false

# ========================================
# Logging Configuration - Production
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_ENABLED=true

# ========================================
# CORS Configuration
# ========================================
# Set based on your deployment architecture
CORS_ENABLED=false
CORS_MAX_AGE=86400
# ALLOWED_ORIGINS=https://yourdomain.com

# ========================================
# Cookie Configuration - Production
# ========================================
COOKIE_SECURE=true
COOKIE_SAMESITE=lax

# ========================================
# Optional Services
# ========================================
# SENDGRID_API_KEY=<set-via-hosting-environment>
# ADMIN_PASSWORD=<set-via-hosting-environment>
CSRF_METRICS_ENABLED=false